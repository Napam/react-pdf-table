{
  "compilerOptions": {
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmit": true,
    "module": "ES6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "target": "ES2015",
    "outDir": "./lib",
    "rootDirs": ["src"],
    "baseUrl": "src",
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
  ]
}
